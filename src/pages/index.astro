        font-size: 1.2rem;
        margin-bottom: 2rem;
        opacity: 0.9;
        max-width: 600px;
        margin-left: auto;
        margin-right: auto;
    }

    .search-container {
        margin: 2rem 0;
    }

    .search-box {
        display: flex;
        max-width: 500px;
        margin: 0 auto;
        background: white;
        border-radius: 50px;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(0,0,0,0.2);
    }

    .search-input {
