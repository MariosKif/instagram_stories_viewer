        border: 1px solid rgba(255,255,255,0.3);
        color: white;
        padding: 8px 12px;
        border-radius: 6px;
        font-size: 14px;
        cursor: pointer;
    }

    .language-selector select option {
        background: #333;
        color: white;
    }

    /* Main Content */
    .main {
        min-height: calc(100vh - 200px);
    }

    /* Hero Section */
